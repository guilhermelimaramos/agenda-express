<%- include('includes/head') %>
<%- include('includes/nav') %>


  <div class="container">
  
    <div class="row">
      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3"></div>
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>

        <div class="row">

          <div class="col-lg">

            <h4>Faça seu Cadastro</h4>
            <p>Se você não tem conta preencha os campos abaixo:</p>
            <form action="/login/registro" method="post">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label >Email</label>
                <input type="email" class="form-control mb-3" name="email">
              </div>

              <div class="form-group">
                <label >Senha</label>
                <input type="password" class="form-control" class="mb-3" name="password">
              </div>
    
              <button type="submit" class="btn btn-primary mt-3">Criar Conta</button>
            </form>
          </div>
          <!-- ------------------------------------------------------------------------------------------------ -->
          <div class="col-lg">

            <h4>Efetuar Login</h4>
            <p>Se você lá tem conta, faça o login:</p>
            <form action="/login/login" method="post">
              <input type="hidden" name="_csrf" value=<%= csrfToken %> >
              <div class="form-group">
                <label >Email</label>
                <input type="email" class="form-control mb-3" name="email">
              </div>

              <div class="form-group">
                <label >Senha</label>
                <input type="password" class="form-control mb-3" name="password">
              </div>
    
              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>

          </div>

        </div>

      <div class="col-lg-2"></div>
    </div>

  </div>

<%- include('includes/footer') %>